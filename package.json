{
  "name": "starwars-crud",
  "version": "1.0.1",
  "description": "Simple CRUD application based on swapi.co",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run run:api",
    "server": "node src/server/index.js",
    "client": "cross-env NODE_ENV=development webpack --color -w",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "test:routes": "tape src/tests/server/routes/*.js | faucet",
    "test:services": "tape src/tests/server/services/*_test.js | faucet"
  },
  "keywords": [
    "api",
    "nodejs",
    "react",
    "redux",
    "starwars"
  ],
  "author": "Keuller Magalhaes",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react",
      "flow",
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "chrome >= 59",
              "firefox >= 54"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "dependencies": {
    "bulma": "^0.5.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-action-helper": "^1.1.1",
    "redux-observable": "^0.16.0",
    "request": "^2.82.0",
    "rxjs": "^5.4.3",
    "sqlite3": "^3.1.11",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "faucet": "^0.0.1",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.52.0",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "supertest": "^3.0.0",
    "tape": "^4.8.0",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1"
  },
  "engines": {
    "node": ">= 8.0.0"
  }
}
